@{
    ViewData["Title"] = "Register a company";
}
<link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />

<body>
    <div class="login-page">
        <div class="login-container">
            <h2>Register a company</h2>
            <form asp-action="PostCompanyAndUser" asp-controller="Identity" method="post">
                <div class="company-container">
                <div class="company-section">
                <label for="CompanyTitle">Company Title:</label>
                        <input type="text" id="CompanyTitle" name="companyModel.Title" required />

                <label for="IndustryType">Industry Type:</label>
                        <input type="text" id="IndustryType" name="companyModel.IndustryType" required />

                <label for="ImageLocation">Image Location:</label>
                        <input type="text" id="ImageLocation" name="companyModel.ImageLocation" />

                <label for="StreetAddress">Street Address:</label>
                        <input type="text" id="StreetAddress" name="companyModel.StreetAddress" required />

                <label for="City">City:</label>
                        <input type="text" id="City" name="companyModel.City" required />

                <label for="State">State:</label>
                        <input type="text" id="State" name="companyModel.State" />

                <label for="PostalCode">Postal Code:</label>
                        <input type="text" id="PostalCode" name="companyModel.PostalCode" />

                <label for="Country">Country:</label>
                        <input type="text" id="Country" name="companyModel.Country" required />

                <label for="PhoneNumber">Company Phone Number:</label>
                        <input type="text" id="PhoneNumber" name="companyModel.PhoneNumber" required />

                <label for="Email">Company Email:</label>
                        <input type="email" id="Email" name="companyModel.Email" required />
                </div>
                </div>

                <div class="user-section">
                    <h3>User Signup</h3>

                    <label for="UserUsername">Username:</label>
                    <input type="text" id="UserUsername" name="UserModel.Username" required />

                    <label for="UserEmail">User Email:</label>
                    <input type="email" id="UserEmail" name="UserModel.Email" required />

                    <label for="UserPassword">User Password:</label>
                    <input type="password" id="UserPassword" name="userPassword" required />

                    <label for="UserPhoneNumber">User Phone Number:</label>
                    <input type="text" id="UserPhoneNumber" name="UserModel.PhoneNumber" required />
                </div>

                <button type="submit">Register</button>
            </form>
        </div>
    </div>
</body>
